<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--=======================-->
    <!--Widgets.MaterialDivider-->
    <!--=======================-->
    <style name="Widget.KaniCard.MaterialDivider" parent="Widget.Material3.MaterialDivider">
        <item name="dividerColor">@color/divider_default</item>
    </style>

    <!--===============-->
    <!--Text Appearance-->
    <!--===============-->
    <style name="TextAppearance.Widget.Button" parent="TextAppearance.Material3.TitleSmall" />

    <style name="TextAppearance.Widget.Menu" parent="TextAppearance.AppCompat.Menu">
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>

    <style name="TextAppearance.KaniCard.Preference.Secondary" parent="TextAppearance.Material3.BodySmall" />

    <style name="TextAppearance.KaniCard.SectionHeader" parent="TextAppearance.Material3.LabelLarge">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <!--==============-->
    <!--Widgets.Switch-->
    <!--==============-->
    <style name="Widget.KaniCard.Switch" parent="Widget.Material3.CompoundButton.Switch">
        <item name="materialThemeOverlay">@style/ThemeOverlay.KaniCard.Switch</item>
    </style>

    <style name="ThemeOverlay.KaniCard.Switch" parent="">
        <item name="elevationOverlayEnabled">@bool/elevationOverlayEnabled</item>
    </style>
</resources>